@inject Data.DataService Data
@using Fitness_Tracker_App.Data
@using Fitness_Tracker_App

<!-- Get information about a day where training happend, and what exercises were done on this particular day-->


<div style="border: thin solid black; margin: 5px">
    <h3>Training Day Details</h3>
    @if (Data.CurrentUser == null)
    {
        <p>Please Create a User first!</p>
    }
    else
    {
        @*<p>Date:</p>
            <input type="date" @bind="_DateTime" />*@

        <br />
        <p>Body Weight in kg's':</p>
        <input type="number" @bind="_BodyWeight" />
        <br />
        <button class="btn btn-primary" @onclick="AddTrainingDay">Add Day</button>
    }
    @*Reps:
        <input type="number" @bind="_numberReps" />
        <button @onclick="IncreaseReps">Increase Reps.</button>
        <br />*@

    @*Sets:
        <input tupe="number" @bind="_numberSets" />
        <button @onclick="IncreaseSets">Increase Sets</button>*@

    @*<button class="btn btn-primary" @onclick="WriteXML">Save Training Day</button>*@
    @*<input type="submit" @bind="_SaveTrainingDay" />*@

    <ExerciseDetails BodyPart="Chest" ExerciseNames="@Data.ChestExerciseNames">         </ExerciseDetails>
    <div class="container">
        <img src="/ExerciseImages/chest.png" />
    </div>
    <ExerciseDetails BodyPart="Shoulders" ExerciseNames="@Data.ShoulderExerciseNames">  </ExerciseDetails>
   
    <ExerciseDetails BodyPart="Back" ExerciseNames="@Data.BackExerciseNames">           </ExerciseDetails>
    <ExerciseDetails BodyPart="Legs" ExerciseNames="@Data.LegExerciseNames">            </ExerciseDetails>

    <ExerciseDetails BodyPart="Arms" ExerciseNames="@Data.ArmExerciseNames">            </ExerciseDetails>

</div>

@code {

        private DateTime _DateTime;
        private double _BodyWeight;
        private string _ChestExercises;
        private int _numberReps = 0;
        private int _numberSets = 0;
        private Workout _selectedChestWorkout;
        private Workout _selectedBackWorkout;





        public void AddTrainingDay()
        {
            var aTrainingDay = new TrainingDay();
            aTrainingDay.BodyWeight = _BodyWeight;
            aTrainingDay.TodaysDate = _DateTime;

            Data.CurrentUser.TrainingDays.Add(aTrainingDay);
