@inject Data.DataService Data
@using Fitness_Tracker_App.Data
@using Fitness_Tracker_App

<!-- Get information about a day where training happend, and what exercises were done on this particular day-->


<div style="border: thin solid black; margin: 5px">
    <h3>Training Day Details</h3>
    @if (Data.CurrentUser == null)
    {
        <p>Please Create a User first!</p>
    }
    else
    {
        <p>Date:</p>
        <input type="date" @bind="_DateTime" />

        <br />
        <p>Body Weight in kg's':</p>
        <input type="number" @bind="_BodyWeight" />
        <br />
        <button class="btn btn-primary" @onclick="AddTrainingDay">Add Day</button>
    }

   @*<ExerciseDetails @bind-SelectedWorkout="_Workout></ExerciseDetails>*@
    @*<ExerciseDetails @bind-SelectedWorkout ="_Workout"></ExerciseDetails>*@


    <ExerciseDetails BodyPart="Chest"
                     ExerciseNames="@Data.ChestExerciseNames"
                     ImagePath="/ExerciseImages/chest - display.png"
                     NumberReps="@_ChestExercises"
                     NumberSets="@_ChestExercises"
                     Weights="@_ChestExercises"
                     >
        
    </ExerciseDetails>

    <ExerciseDetails BodyPart="Shoulders"
                     ExerciseNames="@Data.ShoulderExerciseNames"
                     ImagePath="/ExerciseImages/shoulder - display.jpg"
                     NumberReps="@_ShoulderExercises"
                     NumberSets="@_ShoulderExercises"
                     Weights="@_ShoulderExercises"
                     >
               
    </ExerciseDetails>

    <ExerciseDetails BodyPart="Back"
                     ExerciseNames="@Data.BackExerciseNames"
                     ImagePath="/ExerciseImages/Back - upperBack.jpg"
                     ImagePath2="/ExerciseImages/lowerback display.jpg"
                     NumberReps="@_BackExercises"
                     NumberSets="@_BackExercises"
                     Weights="@_BackExercises" >

    </ExerciseDetails>

    <ExerciseDetails BodyPart="Arms"
                     ExerciseNames="@Data.ArmExerciseNames"
                     ImagePath="/ExerciseImages/Bicep display image.jpg"
                     ImagePath2="/ExerciseImages/Arms - tricep display.jpg"
                     NumberReps="@_ArmExercises"
                     NumberSets="@_ArmExercises"
                     Weights="@_ArmExercises"
                     >

    </ExerciseDetails>


    <ExerciseDetails BodyPart="Legs"
                     ExerciseNames="@Data.LegExerciseNames"
                     ImagePath="/ExerciseImages/legs display.jpg"
                     NumberReps="@_LegExercises"
                     NumberSets="@_LegExercises"
                     Weights="@_LegExercises"
                     
                     >
    </ExerciseDetails>

</div>

@code {



    private DateTime _DateTime;
    private double _BodyWeight;
    private string _ChestExercises;
    private string _ArmExercises;
    private string _LegExercises;
    private string _ShoulderExercises;
    private string _BackExercises;
    private int _numberReps = 0;
    private int _numberSets = 0;
    private Workout _selectedChestWorkout;
    private Workout _selectedBackWorkout;
    private Workout _Workout;





    public void AddTrainingDay()
    {
        var aTrainingDay = new TrainingDay();
        aTrainingDay.BodyWeight = _BodyWeight;
        aTrainingDay.TodaysDate = _DateTime;
        aTrainingDay.Workouts.Add(_selectedChestWorkout);
        Data.CurrentUser.TrainingDays.Add(aTrainingDay);
        //Data.WriteXML();
        //Data.ReadXML();

    }


}

